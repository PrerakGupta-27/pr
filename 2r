#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/socket.h>
#include <sys/un.h>
#include <unistd.h>

#define SOCKET_NAME "mhrydv.socket"

int main(int argc, char *argv[]) {
	struct sockaddr_un servername;
	int down_flag = 0;
	int connection_socket;
	int ret;
	int maxIdx = 0;
	int data_socket;
	char buffer[10];

	connection_socket = socket(AF_UNIX, SOCK_SEQPACKET, 0);

	memset(&servername, 0, sizeof(servername));
	servername.sun_family = AF_UNIX;
	strncpy(servername.sun_path, SOCKET_NAME, sizeof(servername.sun_path) - 1);

	ret = bind(connection_socket, (const struct sockaddr *) &servername, sizeof(servername));

	ret = listen(connection_socket, 100);

	while(1) {
		data_socket = accept(connection_socket, NULL, NULL);

		maxIdx = 0;
		int curIdx = maxIdx;
		while(1) {
			ret = read(data_socket, buffer, sizeof(buffer));

			// buffer[sizeof(buffer) - 1] = 0;
			// curIdx = buffer[0];

			if(!strncmp(buffer, "DOWN", sizeof(buffer))) {
				down_flag = 1;
				break;
            }

			printf("Received Strings are: \n") ;
        	printf("%s\n",buffer);
        	memset(buffer, 0, 10);

			printf("\n");
			curIdx+=5;
			sprintf(buffer, "%d", curIdx);
			printf("Id sent by client = %s\n", (buffer));	

			if(curIdx == maxIdx + 5) {
				maxIdx = curIdx;
				ret = write(data_socket, buffer, sizeof(buffer));
			}	

			if(curIdx >= 50) break;
		}
		close(data_socket);
		if(down_flag) {
			printf("SHUTTING SERVER");
			close(connection_socket);
			unlink(SOCKET_NAME);
			exit(EXIT_SUCCESS);
			break;
		}

		if(ret == -1) {
			perror("write");
			exit(EXIT_FAILURE);
		}
		
	}

	return 0;
}
